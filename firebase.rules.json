{
  "rules": {
    ".read": true,
    ".write": true,
    "chat": {
      "messages": {
        ".indexOn": ["timestamp"],
        ".read": true,
        ".write": "auth != null"
      }
    },
    "users": {
      ".indexOn": ["username"],
      ".read": true,
      ".write": "auth != null"
    }
  }
} 